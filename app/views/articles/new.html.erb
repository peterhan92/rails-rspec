<h3>New Article</h3>

<%= form_for @article, html: { role: "form" } do |f| %>
  <% if @article.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@article.errors.count, "error")%> prohibited this article from being saved:</h5>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Title of article", autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 10, placeholder: "Body of article", autofocus: true, class: "form-control" %>
  </div>
  <button class="btn">Create</button>
<% end %>